    GPIO.output(pines[1], True)
  if level > 340:
    GPIO.output(pines[2], True)
  if level > 510:
    GPIO.output(pines[3], True)
  if level > 680:
    GPIO.output(pines[4], True)
#Enviar tweet si level > 850
  if level > 850:
    GPIO.output(pines[5], True)
